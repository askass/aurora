<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/operation_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/custom_ripple_transparent_border_bottom"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/operation_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:textColor="@color/grey_txt_color"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingEnd="10dp" />

    <TextView
        android:id="@+id/category_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:textColor="@color/grey_txt_color"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingEnd="8dp" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingBottom="7dp"
        android:textColor="@color/grey_txt_color"
        android:textSize="15sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        />

    <ProgressBar
        android:id="@+id/operation_progress_bar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="7dp"
        android:clickable="false"
        android:visibility="gone"
        android:padding="2dp"
        />

    <TextView
        android:id="@+id/operation_amount"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:textColor="@color/grey_txt_color"
        android:textSize="15sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="bottom|end"
        android:paddingBottom="7dp"
        />



</LinearLayout>