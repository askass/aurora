<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- draw a 1 dp width border around the rectangle shape -->
            <stroke android:color="@color/grey_line" android:width="1.5dp"/>
        </shape>
    </item>
    <!--
        hide left, top and right side border using white color
        by padding 1 dp bottom side
    -->
    <item android:top ="1.5dp">
        <shape android:shape="rectangle">
             <solid  android:color="@color/white"/>
        </shape>
    </item>
</layer-list>